<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>classes.opration.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>classes.opration.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getText</servlet-name>
        <servlet-class>classes.opration.ShowArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getText</servlet-name>
        <url-pattern>/getText</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>chksid</servlet-name>
        <servlet-class>classes.opration.CheckSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chksid</servlet-name>
        <url-pattern>/chksid</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>adShow</servlet-name>
        <servlet-class>classes.opration.AdminShow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adShow</servlet-name>
        <url-pattern>/adShow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>setStatus</servlet-name>
        <servlet-class>classes.opration.SetOpenStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>setStatus</servlet-name>
        <url-pattern>/setStatus</url-pattern>
    </servlet-mapping>


</web-app>